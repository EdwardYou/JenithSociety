@model ZenithWebSite.Models.JenithEventModel.Activity

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer

@{
    ViewBag.Title = _localizer["Edit"];
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@_localizer["Activity"]</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ActivityId)

        <div class="form-group">
            <p class="control-label col-md-2">@_localizer["Description"] </p>
            <div class="col-md-10">
                <input asp-for="ActivityDescr", class="form-control" />
                <span class="text-danger" asp-validation-for="ActivityDescr" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">@_localizer["Creation Date"] </p>
            <div class="col-md-10">
                <input asp-for="CreationDate" value=@DateTime.Now asp-is-disabled="true" disabled="disabled" class="form-control" />
                <span class="text-danger" asp-validation-for="CreationDate" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=@_localizer["Save"] class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a asp-action="Index">
        @_localizer["Back to List"]
    </a>
</div>
